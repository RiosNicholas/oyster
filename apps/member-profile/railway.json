{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bun run db:migrate && bun run --filter=@oyster/member-profile build",
    "nixpacksConfigPath": "/apps/member-profile/railway.json",
    "watchPatterns": [
      "/apps/member-profile/**/*",
      "/packages/core/**/*",
      "/packages/db/**/*",
      "/packages/ui/**/*"
    ]
  },
  "deploy": {
    "numReplicas": 2,
    "startCommand": "bun run --filter=@oyster/member-profile start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 120,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
