{
  "name": "@oyster/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./src/index.ts",
    "./dist/db": "./dist/db.d.ts",
    "./test/*": "./src/test/*",
    "./test/constants": "./src/test/constants.ts"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "bun run ./src/scripts/migrate.ts && bun run types",
    "migrate:down": "bun run ./src/scripts/migrate.ts --down && bun run types",
    "migration:create": "bun run ./src/scripts/create-migration.ts",
    "seed": "bun run ./src/scripts/seed.ts && bun run types",
    "type-check": "tsc --noEmit",
    "types": "kysely-codegen --dialect=postgres --camel-case --out-file=./dist/db.d.ts"
  },
  "dependencies": {
    "kysely": "^0.27.3",
    "pg": "^8.8.0"
  },
  "devDependencies": {
    "@oyster/eslint-config": "workspace:*",
    "@oyster/tsconfig": "workspace:*",
    "@types/pg": "^8.11.2",
    "@types/prompt-sync": "^4.2.3",
    "commander": "^12.0.0",
    "dedent": "^0.7.0",
    "kysely-codegen": "^0.10.1",
    "prompt-sync": "^4.2.0"
  }
}
